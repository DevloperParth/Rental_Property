

<!DOCTYPE html>
<html>
<head>
<title>Page Title</title>
<%= stylesheet_link_tag 'styles1.css' %>
<link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>

<section class="categories" id="categories"> <br> <br>
    <h1 class="heading">Properties <span>Detail</span> </h1>
    <div class="box-container">
        <div class="box">
            <img src="/static/image/cat-1.png" alt="">
            <%=image_tag @property.image.to_s,style: 'height:190px; width:295px;'%>
            <h5><%= @property.property_type%> Types</h5>
            <h5>Price <%= @property.price%> <strong>  Lac</strong></h5>
          
            <h5><%= @property.city%></h5>
            <h5><%= @property.address%></h5>
            <p style="color: orangered;">Owner details</p>
            <h5><strong>Name</strong> <%= User.find(@property.user_id).first_name %> 
            <%= User.find(@property.user_id).last_name%>
            </h5>
            <h5><strong>Mobile No</strong> <%= User.find(@property.user_id).mobile%></h5>
            <h5><strong>Mail</strong> <%= User.find(@property.user_id).email%></h5>
            <h5><strong>Mail</strong> <%=@property.id%></h5>
            
    
        <%= button_to "Buy",carts_path(user_id: current_user.id,property_id:@property.id) , method: :post ,class: "btn"%>


          
           
        </div>
        
    </div>
</section>

<section class="products" id="products"> <br> <br> <br> <br>

 </section>

 </section>
 

</body>
<script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>
<%= javascript_include_tag('test.js')%>

</html>
<p style="color: green"><%= notice %></p>

<%= render @property %>

<div>
  <%= link_to "Edit this property", edit_property_path(@property) %> |
  <%= link_to "Back to properties", properties_path %>

  <%= button_to "Destroy this property", @property, method: :delete %>
</div>







