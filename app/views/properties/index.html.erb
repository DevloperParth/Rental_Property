

<!DOCTYPE html>
<html>
<head>
<title>Page Title</title>
<%= stylesheet_link_tag 'styles1.css' %>
<link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
<section class="home" id="home">

    <div class="content">
        <h3>Low Cost <span>Properties</span> for your</h3>
        <p>
            We sell fresh organic farm based nutrition rich Properties only.
        </p>
        <a href="#" class="btn">shop now</a>
    </div>
</section>
<section class="categories" id="categories"> <br> <br>
    <h1 class="heading"> product <span>categories</span> </h1>
    <div class="box-container">
        <div class="box">
            <img src="/static/image/cat-1.png" alt="">
            <h3>Flat</h3>
            <p style="color: orangered;">upto 20% off</p>
            <a href="/properties/flat/action" class="btn">shop now</a>
        </div>

        <div class="box">
            <img src="/static/image/cat-2.png" alt="">
            <h3>fresh fruits</h3>
            <p style="color: orangered;">upto 20% off</p>
            <a href="{% url 'food' %}" class="btn">shop now</a>
        </div>

        <div class="box" >
           
            <img src="/static/image/cat-3.png" alt="">
            <h3>dairy products</h3>
            <p style="color: orangered;">upto 20% off</p>
            <a href="{% url 'dairy' %}" class="btn">shop now</a>
        </div>
    </div>
</section>

<section class="products" id="products"> <br> <br> <br> <br>

 </section>
 <section class="products" id="products"> <br> <br> <br> <br>


    <h1 class="heading"> our <span>Propertiess</span> </h1>

    <div class="swiper product-slider">
        <div class="swiper-wrapper center-item">
            <% @properties.each do |property| %>
                <div class="swiper-slide box">
                    <%=image_tag property.image.to_s,style: 'height:190px; width:295px;'%>

                    <h5 class="product-title"><%=  property .property_type %></h5>
                    <h5 class="product-title">city <%=  property.city %></h5>
                    <h5 class="product-title"><%=  property.address%></h5>
            
                    <div>
                        <span class="old-price">&#8377;<%=  property .price %></span>
                        <span class="new-price">&#8377;<%=  property .price %></span>
                    </div>
                     <%= link_to "Show Now",property, class: "btn"%>

                   

                </div> 
                <div>
               
                 
                 
                </div>
             
            <% end %>
            </div>
        </div>
    </div>
 </section>
 

</body>
<script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>
<%= javascript_include_tag('test.js')%>

</html>







