<h1>New property</h1>
<br>
<div>
  <%= link_to "Back to properties", properties_path %>
  <%= form_with model: @property do |form| %>
    <div>
      <%= form.label :description %><br>
      <%= form.text_field :description %>
    </div>
    <div>
      <%= form.label :price %><br>
      <%= form.number_field :price %>
    </div>
    <div>
      <%= form.label :property_type %><br>
      <%= form.text_field  :property_type %>
    </div>
    <div>
      <%= form.label :location%><br>
      <%= form.text_field  :location %>
    </div>
    <div>
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>
    <div>
      <%= form.label :city %><br>
      <%= form.text_field :city %>
    </div>
    <div>
      <%= form.label :address %><br>
      <%= form.text_field :address  %>
    </div>
    <div>
      <%= form.hidden_field :user_id %><br>
      <%= form.hidden_field :user_id, value:current_user.id %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
